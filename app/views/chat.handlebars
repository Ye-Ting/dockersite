<!doctype html>
<html>
<head>
  <title>Socket.IO chat</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font: 13px Helvetica, Arial;
    }

    #messages {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    #messages li {
      padding: 5px 10px;
    }

    #messages li:nth-child(odd) {
      background: #eee;
    }
  </style>
  <link rel="stylesheet" href="./bower_components/bootstrap/dist/css/bootstrap.min.css"/>
</head>
<body>
<div class="container">

  <div class="row">
    <div class="col-md-2">
      <div id="roomlist" class="list-group">
        <a class="list-group-item active" href="#room1" aria-controls="home" role="tab"
           data-toggle="tab" data-roomid='room1'>Room1</a>
        <a class="list-group-item" href="#room2" aria-controls="room2" role="tab" data-toggle="tab" data-roomid='room2'>Room2</a>
        <a class="list-group-item" href="#room3" aria-controls="room3" role="tab" data-toggle="tab" data-roomid='room3'>Room3</a>
        </a>
      </div>

    </div>
    <div class="col-md-10">
      <ul id="messages">

      </ul>
    </div>
  </div>
  <div class="row">

    <div class="container">
      <form action="" class="form-inline">
        <div class="form-group">

          <input id="m" autocomplete="off" class="form-control"/>
        </div>
        <div class="form-group">

          <button class="btn btn-primary">Send</button>
        </div>

      </form>
    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="./bower_components/jquery/dist/jquery.min.js"></script>
<script src="./bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script>

  $(document).ready(function () {
    var socket = io();
    var _roomid = window.location.hash ? window.location.hash.slice(1) : "room1";
    socket.emit('user:join_room', {roomid: _roomid});
    socket.on('online', function (data) {
      console.log(data.msg);
    });
    $('form').submit(function () {
      var data = {
        roomid: _roomid,
        msg: $('#m').val()
      };
      socket.emit('chat:send_message', data);
      $('#m').val('');
      return false;
    });
    socket.on('chat:append_message', function (data) {
      console.log(data);
      $('#messages').append($('<li>').text(data.msg));
    });
    $('#roomlist').on('click', function (e) {
      var target = e.target;
      _roomid = target.dataset.roomid;
      $('#messages').html('');
      socket.emit('user:join_room', {roomid: _roomid});
    });
  });


</script>
</body>

</html>
